<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diglog"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_24"
        android:text="Assignment"
        android:layout_marginLeft="@dimen/magin_24"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginTop="@dimen/margin_10"
        android:text="Do you really want Exit App?"
        android:layout_marginLeft="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sp_20"
        android:layout_marginTop="@dimen/sp_20"
        android:layout_marginRight="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_114"
            android:text="No"
            android:gravity="center"
            android:textSize="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_10"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/sp_5"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/Done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_6"
            android:textColor="@color/white"
            android:text="Yes"
            android:textSize="@dimen/margin_14"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>